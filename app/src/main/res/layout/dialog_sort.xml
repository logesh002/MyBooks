<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by"
        android:textAppearance="?attr/textAppearanceTitleMedium" />

    <RadioGroup
        android:id="@+id/radio_group_sort_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_date_added"
            android:text="Date Added" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_title"
            android:text="Title" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_author"
            android:text="Author" />
        <RadioButton
            android:id="@+id/radio_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Order"
        android:textAppearance="?attr/textAppearanceTitleMedium" />

    <RadioGroup
        android:id="@+id/radio_group_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <RadioButton
            android:id="@+id/radio_descending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descending" />
        <RadioButton
            android:id="@+id/radio_ascending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ascending" />
    </RadioGroup>

</LinearLayout>